<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<include layout="@layout/app_bar"
    android:id="@+id/appBar"/>

    <ImageView
    android:layout_width="match_parent"
        android:layout_below="@+id/appBar"
    android:layout_height="@dimen/dimen_230dp"
        android:id="@+id/imageView"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/imageView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:textSize="@dimen/size_16sp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:textStyle="bold"
        android:textColor="@color/blackColor"
        android:id="@+id/titleTxtView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTxtView"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:id="@+id/authorTxtView"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:textSize="@dimen/size_16sp"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authorTxtView"
        android:id="@+id/dateTxtView"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:textSize="@dimen/size_16sp"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateTxtView"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:id="@+id/contentTxtView"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:textSize="@dimen/size_16sp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>